@page
@model HBoostUltra.Pages.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>H-Regedit</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- PAYPAL SCRIPT -->
    <script src="https://www.paypal.com/sdk/js?client-id=BAAA-TvOu0amZ8Ra-1jUeX8QfhJxbq0tCC0-QV2w23iwQfyAxEDbiokY67BHILUR_Ck23NnIOszBlCCiJY&components=hosted-buttons&disable-funding=venmo&currency=USD"></script>

    <!-- MERCADOPAGO SDK -->
    <script src="https://sdk.mercadopago.com/js/v2"></script>

    <!-- FIREBASE -->
    <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore-compat.js"></script>

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            scroll-behavior: smooth;
        }

        /* Header */
        header {
            display: flex;
            align-items: center;
            padding: 15px 10px;
            background: linear-gradient(90deg,#1e3c72,#2a5298);
            color: white;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }
        header h1 {
            margin: 0;
            font-size: 28px;
            margin-right: 20px;
        }
        nav {
            display: flex;
            gap: 25px;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }
        nav a {
            color: white;
            text-decoration: none;
            font-weight: 700;
            position: relative;
            transition: all 0.3s ease;
        }
        nav a::after {
            content: '';
            display: block;
            height: 3px;
            background: #00bfff;
            transition: width 0.3s;
            width: 0;
        }
        nav a:hover::after, nav a.active::after {
            width: 100%;
        }
        nav a:hover, nav a.active {
            color: #00bfff;
        }

        /* Buy box */
        .buy-box {
            background-color: rgba(0,0,0,0.6);
            color: #fff;
            padding: 30px 50px;
            border-radius: 15px;
            text-align: center;
            font-size: 20px;
            max-width: 400px;
            margin: 0 auto;
            box-shadow: 0 4px 15px rgba(0,0,0,0.4);
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        .buy-box ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .buy-box li {
            margin-bottom: 10px;
            font-weight: bold;
        }

        /* Menu toggle */
        .menu-toggle {
            display: none;
            flex-direction: column;
            cursor: pointer;
        }
        .menu-toggle div {
            width: 28px;
            height: 3px;
            background: white;
            margin: 5px 0;
            transition: 0.4s;
        }

        /* Sections */
        section {
            width: 100%;
            height: 580px;
            color: white;
            overflow: hidden;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .divider {
            height: 30px;
            background: linear-gradient(to right,#000,#333,#000);
            width: 100%;
        }
        .anim-element {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease-out;
        }
        .anim-element.visible {
            opacity: 1;
            transform: translateY(0);
        }

        #btnUp {
            position: fixed;
            bottom: 30px;
            right: 30px;
            display: none;
            background-color: #00bfff;
            color: white;
            border: none;
            padding: 14px 18px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 20px;
            z-index: 1001;
            box-shadow: 0px 6px 12px rgba(0,0,0,0.3);
            transition: all 0.3s ease, transform 0.3s ease;
        }
        #btnUp:hover {
            background-color: #0095cc;
            transform: scale(1.2) rotate(10deg);
        }

        button.action-btn {
            background-color: rgba(30,60,114,0.8);
            color: white;
            border: none;
            padding: 14px 28px;
            font-size: 16px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            margin-top: 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }
        button.action-btn:hover {
            background-color: rgba(42,82,152,0.9);
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 6px 15px rgba(0,0,0,0.3);
        }

        @@media (max-width: 768px) {
            header {
                flex-direction: row;
                justify-content: space-between;
                padding: 10px 20px;
            }
            section {
                height: auto;
                padding: 80px 20px;
            }
            nav {
                position: absolute;
                top: 60px;
                right: 0;
                background: linear-gradient(180deg,#1e3c72,#2a5298);
                flex-direction: column;
                width: 200px;
                padding: 10px;
                display: none;
                border-radius: 0 0 10px 10px;
            }
            nav.active {
                display: flex;
            }
            .menu-toggle {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>H-Regedit</h1>
        <div class="menu-toggle" onclick="toggleMenu()">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <nav id="menu">
            <a href="#home" onclick="navigateTo(event,'home')">Home</a>
            <a href="#software" onclick="navigateTo(event,'software')">Software</a>
            <a href="#buy" onclick="navigateTo(event,'buy')">Buy</a>
            <a href="#about" onclick="navigateTo(event,'about')">About</a>
            <a href="/Profile">Profile</a>
        </nav>
    </header>

    <div class="spacer"></div>

    <section id="home" style="background-image:url('@Url.Content("~/images/home-bg.jpg")');">
        <div style="position:absolute; top:87%; left:50%; transform:translate(-50%,-50%); max-width:600px; padding:30px; border-radius:8px; color:white; font-size:25px; text-align:center; line-height:1.5;">
            Welcome to the official page of <strong>H-Boost Ultra</strong>, optimization software, focused and designed for Minecraft to improve quality in latency.
        </div>
    </section>

    <div class="divider"></div>

    <section id="software" style="background-image:url('@Url.Content("~/images/software-bg.jpg")');">
        <div style="position:absolute; top:50%; left:85%; transform:translate(-50%,-50%); max-width:600px; padding:30px; border-radius:8px; color:white; font-size:95px; text-align:center; line-height:1.5;">
            <strong>Software</strong>
        </div>
    </section>

    <div class="divider"></div>

    <section id="buy" style="background-image:url('@Url.Content("~/images/buy-bg.jpg")');">
        <h2 class="anim-element" style="margin-bottom:20px; position:relative; top:-30px; font-size:60px;">Store</h2>
        <div class="buy-box">
            <h2>H-Boost Ultra</h2>
            <ul>
                <li>✔ Mejora tu HitDetection</li>
                <li>✔ Optimiza tu Knockback</li>
                <li>✔ No es baneable</li>
            </ul>

            <label for="paymentMethod">Selecciona método de pago:</label>
            <select id="paymentMethod">
                <option value="paypal">PayPal</option>
                <option value="mercadopago">MercadoPago</option>
            </select>

            <!-- BOTÓN PAYPAL -->
            <div id="paypal-single-button" style="margin-top:10px; text-align:center;">
                <form action="https://www.paypal.com/ncp/payment/G34GYKWEZCNLG" method="post" target="_blank" style="display:inline-block;">
                    <input type="submit" value="Comprar ahora" style="min-width:150px; padding:10px 20px; font-size:16px; font-weight:bold; background-color:#FFD140; color:#000; border:none; border-radius:0.25rem; cursor:pointer;"/>
                    <div style="margin-top:5px; font-size:0.75rem;">
                        Con la tecnología de <img src="https://www.paypalobjects.com/paypal-ui/logos/svg/paypal-wordmark-color.svg" alt="paypal" style="height:14px; vertical-align:middle;"/>
                    </div>
                </form>
            </div>

            <!-- BOTÓN MERCADOPAGO -->
            <div id="mp-single-button" style="margin-top:10px; text-align:center; display:none;">
                <button id="mpCheckoutBtn" style="min-width:150px; padding:10px 20px; font-size:16px; font-weight:bold; background-color:#00bfff; color:#fff; border:none; border-radius:0.25rem; cursor:pointer;">
                    Comprar con MercadoPago
                </button>
                <div style="margin-top:5px; font-size:0.75rem;">
                    Con la tecnología de <img src="https://http2.mlstatic.com/frontend-assets/ui-navigation/5.14.3/mercadopago/logo__small.png" alt="MercadoPago" style="height:14px; vertical-align:middle;"/>
                </div>
            </div>
        </div>
    </section>

    <div class="divider"></div>

    <section id="about" style="background-image:url('@Url.Content("~/images/about-bg.jpg")');">
        <h2 class="anim-element" style="margin-bottom:20px; position:relative; top:-70px;">About</h2>
        <div style="position:absolute; top:60%; left:50%; transform:translate(-50%,-50%); max-width:700px; padding:20px; color:white; font-size:22px; text-align:center; line-height:1.6;">
            H-Regedit was founded in 2019 by the CEO/owner <strong>Ian</strong>, who is currently focused on developing <strong>H-Boost Ultra</strong>, an optimization software 100% dedicated to Minecraft, enhancing your hit detection and knockback to their best level, all legally. This software is unbannable as it consists of network optimizations.
        </div>
    </section>

    <div class="divider"></div>

    <footer style="background-color:#111111;color:#fff;padding:40px 20px;text-align:center;">
        <div style="margin-bottom:15px;font-size:18px;">📧 Contacto: <a href="mailto:contact@h-regedit.com" style="color:#00bfff;text-decoration:none;">contact@h-regedit.com</a></div>
        <div style="font-size:16px;">&copy; 2025 <strong>H-Regedit</strong>. Todos los derechos reservados.</div>
    </footer>

    <button id="btnUp" onclick="scrollToTop()">&#8679;</button>

    <script>
        // FIREBASE CONFIG
        const firebaseConfig = {
            apiKey: "AIzaSyCXt6578vpprBbRxJWCmPJRzVZLl6pQEHc",
            authDomain: "h-boost-ultra.firebaseapp.com",
            projectId: "h-boost-ultra",
            storageBucket: "h-boost-ultra.firebasestorage.app",
            messagingSenderId: "243692079821",
            appId: "1:243692079821:web:fe072c53a84b9138363784",
            measurementId: "G-J8DH7KPVST"
        };
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();

        // Cambiar visibilidad de botones
        document.getElementById('paymentMethod').addEventListener('change', function(){
            const paypalBtn = document.getElementById('paypal-single-button');
            const mpBtn = document.getElementById('mp-single-button');
            if(this.value==='paypal'){
                paypalBtn.style.display='block';
                mpBtn.style.display='none';
            } else {
                paypalBtn.style.display='none';
                mpBtn.style.display='block';
            }
        });

        // MERCADOPAGO CHECKOUT
        const mp = new MercadoPago("APP_USR-d99d8181-527b-423a-bfbe-b1d506ea7f62", { locale: 'es-AR' });

        document.getElementById('mpCheckoutBtn').addEventListener('click', async function(){
            try {
                const response = await fetch('https://localhost:5081/api/MercadoPago/CreatePreference');
                const data = await response.json();
                const preferenceId = data.preferenceId;

                if(preferenceId){
                    mp.checkout({
                        preference: { id: preferenceId },
                        autoOpen: true
                    });
                } else {
                    alert('Error al generar la preferencia de pago.');
                }
            } catch(err){
                console.error(err);
                alert('Error al conectarse con MercadoPago.');
            }
        });

        // Animaciones y scroll
        function toggleMenu(){ document.getElementById('menu').classList.toggle('active'); }
        function closeMenu(){ document.getElementById('menu').classList.remove('active'); }

        const animElements = document.querySelectorAll('.anim-element');
        const animObserver = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if(entry.isIntersecting){ entry.target.classList.add('visible'); }
            });
        }, { threshold: 0.2 });
        animElements.forEach(el => animObserver.observe(el));

        const btnUp = document.getElementById('btnUp');
        const sections = document.querySelectorAll('section');
        window.addEventListener('scroll', function(){
            if(window.scrollY > 300){ btnUp.style.display="block"; } 
            else{ btnUp.style.display="none"; }

            sections.forEach(section=>{
                const top = section.offsetTop - 90;
                const bottom = top + section.offsetHeight;
                const id = section.getAttribute('id');
                const link = document.querySelector(`nav a[href="#${id}"]`);
                if(window.scrollY>=top && window.scrollY<bottom) link.classList.add('active');
                else link.classList.remove('active');
            });
        });

        function scrollToTop(){ window.scrollTo({ top:0, behavior:'smooth' }); }
        function navigateTo(event,id){
            event.preventDefault();
            const target=document.getElementById(id);
            const headerOffset=70;
            const elementPosition=target.getBoundingClientRect().top;
            const offsetPosition=elementPosition + window.pageYOffset - headerOffset;
            window.scrollTo({top:offsetPosition, behavior:"smooth"});
            closeMenu();
        }
    </script>
</body>
</html>
